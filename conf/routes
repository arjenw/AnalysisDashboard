# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Authentication
GET     /login                      		controllers.authentication.LoginController.login()
POST    /login                      		controllers.authentication.LoginController.authenticate()
GET     /logout                     		controllers.authentication.LoginController.logout()

GET		/jenkinsserver						controllers.data.JenkinsServerController.jenkinsServer(id:Long ?= -1L)
GET		/jenkinsserver/:id					controllers.data.JenkinsServerController.jenkinsServer(id:Long)

# Map static resources from the /public folder to the /assets URL path
GET     /*file               		controllers.Assets.at(path="/public", file)
GET     /assets/*file               controllers.Assets.at(path="/public", file)
